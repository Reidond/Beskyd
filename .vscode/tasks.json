{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint",
      "type": "shell",
      "command": "bun run lint",
      "group": "build"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "bun test",
      "group": "test"
    },
    {
      "label": "Typecheck",
      "type": "shell",
      "command": "bun run typecheck",
      "group": "build",
      "problemMatcher": "$tsc"
    }
  ]
}